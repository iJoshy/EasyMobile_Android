<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dip"
    android:orientation="horizontal"
    android:layout_weight="4" >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="0dp">

        <ImageView
            android:id="@+id/rechargeImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/easybusiness_inner"
            android:fitsSystemWindows="true"
            android:scaleType="centerCrop"
            app:layout_collapseMode="parallax" />

    </android.support.v7.widget.CardView>

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dip"
    android:orientation="horizontal"
    android:layout_weight="3" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/easyBiz20Btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="2dp"
            android:textSize="70dp"
            android:textColor="@color/white"
            android:background="@drawable/button_green"
            android:onClick="showEasyExecutive" />

        <TextView
            android:id="@+id/easyBiz20Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="EasyBusiness 2.0 (Executive)"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:elevation="100dp"/>

    </FrameLayout>

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dip"
    android:orientation="horizontal"
    android:layout_weight="3" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"  >

        <Button
            android:id="@+id/easyBizClassicBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="2dp"
            android:textSize="70dp"
            android:textColor="@color/white"
            android:background="@drawable/button_gray"
            android:onClick="showEasybusiness" />

        <TextView
            android:id="@+id/easyBizClassicTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="EasyBusiness (Classic)"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:elevation="100dp"/>

    </FrameLayout>

</LinearLayout>

</LinearLayout>