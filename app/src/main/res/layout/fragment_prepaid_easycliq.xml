<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="4" >

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="0dp">

            <ImageView
                android:id="@+id/rechargeImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/easycliq_inner"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="3" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/easycliqAddBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|bottom"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="2dp"
                android:padding="40dp"
                android:text="@string/icon_add"
                android:textSize="70dp"
                android:textColor="@color/white"
                android:background="@drawable/button_green"
                android:onClick="easycliqOptin" />

            <TextView
                android:id="@+id/easycliqAddText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_margin="10dp"
                android:paddingRight="40dp"
                android:text="opt in"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold"
                android:elevation="100dp"/>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="3" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"  >

            <Button
                android:id="@+id/easycliqCheckBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|bottom"
                android:layout_marginTop="2dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="2dp"
                android:padding="40dp"
                android:text="@string/icon_trash"
                android:textSize="70dp"
                android:textColor="@color/white"
                android:background="@drawable/button_gray"
                android:onClick="easycliqOptout" />

            <TextView
                android:id="@+id/easycliqCheckText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_margin="10dp"
                android:paddingRight="40dp"
                android:text="opt out"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold"
                android:elevation="100dp"/>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>