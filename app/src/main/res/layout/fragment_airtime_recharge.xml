<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="0dp">

            <ImageView
                android:id="@+id/rechargeImg"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:src="@drawable/recharge_account"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />

        </android.support.v7.widget.CardView>


        <!--android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="right|top"
            android:layout_marginTop="120dp"
            android:layout_above="@+id/rechargeScroll"
            android:tint="#ffffff"
            android:src="@drawable/ic_add"/-->


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rechargeScroll">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:layout_marginTop="150dp"
                android:clipToPadding="false">

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="#fff"
                    card_view:cardElevation="4dp"
                    card_view:cardCornerRadius="0dp"
                    card_view:cardPreventCornerOverlap="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <TextView
                            android:id="@+id/rechargecodeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:textSize="18dp"
                            android:textColor="@color/black"
                            android:text="enter recharge code" />

                        <com.beardedhen.androidbootstrap.BootstrapEditText
                            android:id="@+id/rechargecodeEdit"
                            android:maxLength="15"
                            android:inputType="number"
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_gravity="center_horizontal"
                            bootstrapbutton:be_roundedCorners="true"
                            bootstrapbutton:be_state="success" />

                        <com.beardedhen.androidbootstrap.BootstrapButton
                            android:id="@+id/rechargecodeSubmit"
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:text="recharge"
                            android:layout_gravity="center_horizontal"
                            bootstrapbutton:bb_roundedCorners="true"
                            bootstrapbutton:bb_type="success"
                            android:textSize="20sp"
                            android:onClick="goRechargeNow" />

                        <TextView
                            android:id="@+id/rechargecodeCancel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:textSize="18dp"
                            android:textColor="@color/black"
                            android:text="cancel"
                            android:onClick="showMyaccountScreen" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </FrameLayout>

        </ScrollView>

    </android.support.design.widget.CoordinatorLayout>

</RelativeLayout>