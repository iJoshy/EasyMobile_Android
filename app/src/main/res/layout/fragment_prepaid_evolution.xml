<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="4" >

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="0dp">

            <ImageView
                android:id="@+id/rechargeImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/evolution_inner"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="3" >

        <FrameLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="5.0" >

            <Button
                android:id="@+id/evolutionDataBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                android:paddingTop="-10dp"
                android:paddingLeft="70dp"
                android:text="@string/icon_plus"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:background="@drawable/button_green"
                android:onClick="buyEvoultionData" />

            <TextView
                android:id="@+id/evolutionDataTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="data"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:textStyle="bold"
                android:elevation="100dp"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="5.0" >

            <Button
                android:id="@+id/evolutionVoiceBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="4dp"
                android:paddingTop="-10dp"
                android:paddingLeft="85dp"
                android:text="@string/icon_plus"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:background="@drawable/button_green"
                android:onClick="buyEvoultionVoice" />

            <TextView
                android:id="@+id/evolutionVoiceTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="voice"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:textStyle="bold"
                android:elevation="100dp"/>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="3" >

        <FrameLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="5.5" >

            <Button
                android:id="@+id/evolutionCheckBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|bottom"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"
                android:paddingTop="30dp"
                android:paddingLeft="30dp"
                android:paddingBottom="20dp"
                android:text="@string/icon_check"
                android:textSize="70dp"
                android:textColor="@color/white"
                android:background="@drawable/button_green"
                android:onClick="evolutionCheckbundle" />

            <TextView
                android:id="@+id/evolutionCheckTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:layout_margin="10dp"
                android:text="check\nstatus"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:elevation="100dp"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="4.5" >

            <Button
                android:id="@+id/evolutionCancelBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|top"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="4dp"
                android:paddingTop="10dp"
                android:text="@string/icon_cross"
                android:textSize="70dp"
                android:textColor="@color/white"
                android:background="@drawable/button_gray"
                android:onClick="evolutionCancelbundle" />

            <TextView
                android:id="@+id/evolutionCancelTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:layout_margin="10dp"
                android:text="cancel \nbundle"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:elevation="100dp"/>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>